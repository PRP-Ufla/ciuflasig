@charset "utf-8";
/* CSS Document */

html, body{
	color: #404040;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 12px;
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
	text-align: center; /* hack para o IE */
	background-image: url(../img/fundo2.gif);
}

[type='text'],[type="password"],[type="file"],textarea,select {
	border: 1px solid #248;
	background: #cef;
	color: #000;
}

#centraliza {
	position: relative;
	width: 925px;
	margin:0 auto;         
	text-align:left; /* "rem√©dio" para o hack do IE */ 
	height: 100%;
}
#topo{
	position: relative;
	padding: 0;
	margin: 0;
    height: 148px;
    width: 925px;
}
#menu{
	position: relative;
	color: #fff;
	background: #248;
	padding: 10px 20px 10px 20px;
	margin: 0;
	vertical-align: middle;
	text-align: left;
    height: 20px;
    width: 885px;
}
#conteudo{
	position: relative;
	min-height: 63%;
	margin: 0px;
	padding: 25px;
	/*width: 925px;*/
	background: #ffffff;
}
* html #conteudo {
	height: 63%%; /* hack do IE */ 
}
#rodape{
	border-top:#449 thin solid;
	vertical-align:middle;
	text-align:center;
   	position: relative;
	padding:15px;
    height: 30px;
	background: #e2e2e2;
}

a.menu {
	color: inherit;
	font-family: sans-serif;
	font-size: 16px;
	text-decoration: none;
	font-weight: bold;
}
a.menu:hover {
	color: #6bf;
}

div.itemlink {
	width: 580px;
	height: 10px;
	display: inline-block;
	background: #ccf;
	margin: 0;
	padding: 10px 10px 10px 10px;
}
div.itemlink:hover {
	background: #aaf;
}

#eventlist {
	display: inline-block;
	position: relative;
	border: 2px solid #000;
	width: 600px;
	min-height: 200px;
	margin: 0 10px 0 10px;
	padding: 0;
	vertical-align: top;
	text-align: left;
	font-family: serif;
	font-size: 10px;
}

#courselist {
	display: inline-block;
	position: relative;
	border: 2px solid #000;
	width: 600px;
	min-height: 200px;
	margin: 0 10px 0 10px;
	padding: 0;
	vertical-align: top;
	text-align: left;
	font-family: sans-serif;
	font-size: 10px;
}

#addDialog {
	border: 1px solid #040;
	background: #cef;
	color: #000;
	display: none;
	position: fixed;
	top: 30px;
	left: 125px;
	width: 700px;
	min-height: 200px;
	z-index: 10;
}

table.managecontainer {
	position: relative;
	height: 250px;
	width: 804px;
	border: 2px solid #248;
	margin: 25px;
	padding: 0;
	background: #bcf;
	color: #000;
	text-align: left;
	vertical-align: top;
	border-spacing: 0;
}
td.sidebar {
	width: 200px;
	background: #bcf;
	color: inherit;
	margin: 0;
	padding: 0;
	border: none;
	text-align: left;
	vertical-align: top;
}
button.sidebar {
	display: block;
	width: 100%;
	padding: 10px 0px 10px 0px;
	margin: 0;
	cursor: pointer;
	border: none;
	background: inherit;
	font-weight: bold;
}
button.sidebar:hover {
	background: #fff;
}
td.managecontent {
	width: 560px;
	min-height: 250px;
	background: #ddd;
	color: inherit;
	margin: 10px 10px 10px 0px;
	padding: 20px;
	border: none;
	text-align: left;
	vertical-align: top;
}
